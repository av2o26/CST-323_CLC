

<div class="text-center stacked-btns">
    <h1 class="register-header">Welome! Please Register</h1>

    <div class="register-wrapper">
        <form method="post" action="@Url.Action("Index", "Login")">
            <div class="input-box">
                <input type="text" class="form-control" id="firstname" name="firstname" placeholder="First Name" required>
            </div>
            <div class="input-box">
                <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Last Name" required>
            </div>
            <div class="input-box">
                <input type="number" class="form-control" id="age" name="age" placeholder="Age" required>
            </div>
            <div class="input-box">
                <input type="text" class="form-control" id="email" name="email" placeholder="Email Address" required>
            </div>
            <div class="input-box">
                <input type="number" class="form-control" id="number" name="number" placeholder="Phone Number" required>
            </div>
            <div class="input-box">
                <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
            </div>
            <div class="input-box">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            </div>
            <div class="stacked-btns">
                <button type="submit" class="stacked-button btn-text btn text-black">Register</button>
            </div>
            <div class="register-link">
                <p>Already have an account? <a onclick="location.href='@Url.Action("Index", "Login")'"> Login </a></p>
            </div>
        </form>
    </div>
</div>