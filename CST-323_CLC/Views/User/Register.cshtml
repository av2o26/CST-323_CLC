@model CST_323_CLC.Models.UserModel

@{
    ViewData["Title"] = "Register";
}


<div class="text-center stacked-btns">
    <h1 class="register-header">Register</h1>
    <div class="register-wrapper">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-box" style="color:white; font-weight:bold">
                <input asp-for="FirstName" placeholder="First Name" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <br />
            <div class="input-box" style="color:white; font-weight:bold">
                <input asp-for="LastName" placeholder="Last Name" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <br />
            <div class="input-box" style="color:white; font-weight:bold">
                <input asp-for="Phone" placeholder="Phone Number" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <br />
            <div class="input-box" style="color:white; font-weight:bold">
                <input asp-for="Email" placeholder="Email Address" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br />
            <div class="input-box" style="color:white; font-weight:bold">
                <input asp-for="Username" placeholder="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <br />
            <div class="input-box" style="color:white; font-weight:bold">
                <input asp-for="Password" placeholder="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="stacked-btns">
                <input type="submit" value="Register" class="stacked-button btn-text btn text-black" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
