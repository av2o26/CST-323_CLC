@model CST_323_CLC.Models.PetModel;

<div class="text-center stacked-btns">
    <h1 class="register-header">Tell Us About The New Dog!</h1>

    <div class="register-wrapper">

        <form method="post" action="@Url.Action("AddPet", "Pet")">

            <input type="hidden" name="Id" value="0"/>
            <div class="input-box">
                <input type="text" class="form-control" asp-for="Name" name="Name" placeholder="Name" required>
            </div>
            <div class="input-box">
                <input type="text" class="form-control" asp-for="Name" name="Species" placeholder="Species" required>
            </div>
            <div class="input-box">
                <input type="text" class="form-control" asp-for="Name" name="Breed" placeholder="Breed" required>
            </div>
            <div class="input-box">
                <input type="text" class="form-control" asp-for="Name" name="Description" placeholder="Description" required>
            </div>
            <div class="input-box">
                <input type="text" class="form-control" asp-for="Name" name="Price" placeholder="Price" required>
            </div>
            <div class="remember-forgot">
                <label>Is Adopted? <input type="checkbox" asp-for="AdoptionStatus" /></label>
            </div>
            <div class="stacked-btns">
                <button type="submit" class="stacked-button btn-text btn text-black">Create</button>
            </div>
        </form>
    </div>
</div>