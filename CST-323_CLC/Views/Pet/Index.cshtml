@model IEnumerable<CST_323_CLC.Models.PetModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="header text-center">Our Dogs!</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="pet-wrapper">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdoptionStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Breed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdoptionStatus)
            </td>
            <td>
                        <p><a onclick="location.href='@Url.Action("Index", "Register")'">Edit</a></p> | <p><a onclick="location.href='@Url.Action("Index", "Register", new {id = item.Id})'">Delete</a></p>
            </td>
        </tr>
}
    </tbody>
</table>

</div>
